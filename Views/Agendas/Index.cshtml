@model List<Agenda>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agendar Horario</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Barbeiro:
            </th>
            <th>
                Cliente:
            </th>
            <th>
                Inicio:
            </th>
            <th>
                Fim:
            </th>
            <th>
                Dia Agendado:
            </th>
            <th>
                Status:
            </th>
            <th>
                Servicos:
            </th>
            <th>
                Valor total:
            </th>
            <th>
                Tempo total:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

        <tr>
            <td>
                @item.barbeiro.nome
            </td>
            <td>
                @item.cliente.nome
            </td>
            <td>
                @item.horario.inicio
            </td>
            <td>
                @item.horario.fim
            </td>
            <td>
                @item.diaAgendado
            </td>
            <td>
                @item.trabalhoStatus
            </td>
            <td>
                    @foreach (var servico in item.servicos)
                    {
                        <p>@servico.descricao |</p>
                    }

            </td>
            <td>
                @item.valor_total
            </td>
            <td>
                @item.tempo_total
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
        
}
    </tbody>
</table>
