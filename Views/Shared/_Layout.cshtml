﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Gerenciador de Alunos</title>
    <link rel="icon" href="/css/img/logo_sem_fundo.png" height="50 rem">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-opacity-10 bg-success">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-danger bg-opacity-10 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img class="d-inline" src="/img/logo_sem_fundo.png" height="50rem" />
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="#Horario">Horario</a>
                        </li>

                        <li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Lista
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Agendas" asp-action="Index">Agendas</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Barbeiros" asp-action="Index">Barbeiros</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Caixas" asp-action="Index">Caixas</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Horarios" asp-action="Index">Horarios</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Servicos" asp-action="Index">Servicos</a>
                                </li>
                        </li>
                            </ul>
                        </li>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container bg-opacity-25 bg-success">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="navbar-light bg-danger bg-opacity-10 border-bottom box-shadow mt-3">
        <div class="container">
            &copy; 2024 - Barbearia - <a class="link-offset-2 link-underline link-underline-opacity-0" asp-area="" asp-controller="" asp-action="">Voltar</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
