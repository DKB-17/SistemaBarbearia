@model IEnumerable<SistemaBarbearia.Models.Agenda>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cliente.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horario.inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horario.fim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.servico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.servico.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.diaAgendado)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cliente.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.horario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.horario.inicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.horario.fim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.servico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.servico.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.diaAgendado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
